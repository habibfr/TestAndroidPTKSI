<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Sekolah*" />

            <Spinner
                android:id="@+id/spinner_tipe_sekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:paddingHorizontal="6dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Sekolah*" />

            <EditText
                android:id="@+id/et_nama_sekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat*" />

            <EditText
                android:id="@+id/et_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Pos*" />

            <EditText
                android:id="@+id/et_kode_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="number"
                android:maxLength="5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provinsi*" />

            <Spinner
                android:id="@+id/spinner_provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:paddingHorizontal="6dp"
                android:paddingVertical="8dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota/Kabupaten*" />

            <Spinner
                android:id="@+id/spinner_kota_kabupaten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:paddingHorizontal="6dp"
                android:paddingVertical="8dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telepon Sekolah*" />


            <EditText
                android:id="@+id/et_no_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Sekolah*" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook" />

            <EditText
                android:id="@+id/et_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Siswa*" />


            <EditText
                android:id="@+id/et_jumlah_siswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="number"
                android:max="100"
                android:min="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="10dp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>