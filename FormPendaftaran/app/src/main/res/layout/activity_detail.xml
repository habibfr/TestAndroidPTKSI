<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Sekolah*" />

            <TextView
                android:id="@+id/et_detail_tipe_sekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:editable="false"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Sekolah*" />

            <TextView
                android:id="@+id/et_detail_nama_sekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:editable="false"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat*" />

            <TextView
                android:id="@+id/et_detail_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:editable="false"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Pos*" />

            <TextView
                android:id="@+id/et_detail_kode_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="number"
                android:maxLength="5"
                android:paddingHorizontal="10dp"
                android:editable="false"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provinsi*" />

            <TextView
                android:id="@+id/et_detail_provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota/Kabupaten*" />

            <TextView
                android:id="@+id/et_detail_kota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:editable="false"
                android:paddingVertical="8dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telepon Sekolah*" />



            <TextView
                android:id="@+id/et_detail_no_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Sekolah*" />

            <TextView
                android:id="@+id/et_detail_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:editable="false"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook" />

            <TextView
                android:id="@+id/et_detail_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Siswa*" />


            <TextView
                android:id="@+id/et_detail_jumlah_siswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_input"
                android:inputType="number"
                android:max="100"
                android:enabled="false"
                android:min="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp" />

            <Button
                android:id="@+id/btn_detail_OK"
                android:layout_width="match_parent"
                android:text="OK"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>